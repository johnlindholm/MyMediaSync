<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/syncButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Sync to server"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Refresh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="Not synced"
        app:layout_constraintEnd_toStartOf="@+id/notSyncedField"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:text="Synced"
        app:layout_constraintEnd_toStartOf="@+id/syncedField"
        tools:layout_editor_absoluteY="142dp" />

    <EditText
        android:id="@+id/notSyncedField"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/syncButton" />

    <EditText
        android:id="@+id/syncedField"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notSyncedField" />

</android.support.constraint.ConstraintLayout>